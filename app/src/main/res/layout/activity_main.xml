<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/b2"
        android:layout_marginTop="163dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/b1"
        android:layout_above="@+id/c2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/a1"
        android:layout_above="@+id/a2"
        android:layout_toLeftOf="@+id/b2"
        android:layout_toStartOf="@+id/b2" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/a2"
        android:layout_above="@+id/a3"
        android:layout_alignLeft="@+id/a3"
        android:layout_alignStart="@+id/a3" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/c1"
        android:layout_alignTop="@+id/b1"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/c2"
        android:layout_alignBottom="@+id/b2"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/a3"
        android:layout_below="@+id/b2"
        android:layout_toLeftOf="@+id/b2"
        android:layout_toStartOf="@+id/b2" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/c3"
        android:layout_below="@+id/c2"
        android:layout_toRightOf="@+id/b2"
        android:layout_toEndOf="@+id/b2" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/b3"
        android:layout_below="@+id/b2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Game"
        android:id="@+id/nGame"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
